<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <gradient
                android:angle="0"
                android:startColor="#FE9100"
                android:endColor="#FC1C00"/>
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="5dp" />
            <padding
                android:bottom="2dp"
                android:left="14dp"
                android:right="14dp"
                android:top="2dp"/>
        </shape>
    </item>
</layer-list>